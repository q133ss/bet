{
  "name": "Skybet Manual",
  "version": "1.2.2",
  "background": {
    "scripts": [
      "js/sentry.js",
      "js/sentry_replays.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "description": "Please do NOT open \"background page\"",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "64": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2,
  "permissions": [
    "cookies",
    "storage",
    "notifications",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "commands": {
    "do_bet": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Place a bet",
      "global": true
    },
    "danger_moment": {
      "suggested_key": {
        "default": "Ctrl+G",
        "mac": "Command+G"
      },
      "description": "Danger moment (HOLD)",
      "global": true
    }
  }
}